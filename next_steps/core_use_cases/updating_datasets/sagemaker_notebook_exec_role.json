{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ReadPermissionsForSageMaker",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket",
                "s3:GetBucketPolicy",
                "s3:GetObjectTagging",
				"s3:GetObjectAttributes"
            ],
            "Resource": [
                "arn:aws:s3:::*personalize*",
                "arn:aws:s3:::*personalize*/*",
                "arn:aws:s3:::*personalize*",
                "arn:aws:s3:::*Personalize*/*",
                "arn:aws:s3:::retail-demo-store-us-east-1*",
                "arn:aws:s3:::retail-demo-store-us-east-1/*"
            ]
        },
        {
            "Sid": "S3WritePermissionsForSageMaker",
            "Effect": "Allow",
            "Action": [
                "s3:PutBucketPolicy",
                "s3:CreateBucket",
                "s3:DeleteObject",
                "s3:DeleteBucketPolicy",
                "s3:DeleteBucket",
                "s3:PutObject",
				"s3:PutObjectTagging"
            ],
            "Resource": [
                "arn:aws:s3:::*personalize*",
                "arn:aws:s3:::*personalize*/*",
                "arn:aws:s3:::*personalize*",
                "arn:aws:s3:::*Personalize*/*"
            ]
        },
        {
            "Sid": "IAMPermissionsForSageMaker",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:GetPolicyVersion",
                "iam:GetRole",
                "iam:GetRolePolicy",
                "iam:DeleteRole",
                "iam:CreatePolicy",
                "iam:AttachRolePolicy",
                "iam:PassRole",
                "iam:DetachRolePolicy",
                "iam:DeletePolicy"
            ],
            "Resource": [
                "arn:aws:iam::*:role/PersonalizeRole*",
                "arn:aws:iam::*:policy/PersonalizePolicy*"
            ]
        },
        {
            "Sid": "PersonalizePermissionsForSageMaker",
            "Effect": "Allow",
            "Action": [
                "personalize:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "ListIAMRolesAndPolicies",
            "Effect": "Allow",
            "Action": [
                "iam:ListRoles",
                "iam:ListPolicies"
            ],
            "Resource": [
                "*"
            ]
        }
    ]
}